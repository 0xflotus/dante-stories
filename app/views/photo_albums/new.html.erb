<div data-animation="fadeInUp-fadeOutDown">
  <div class="col-xs-10 col-md-8 col-xs-offset-1 col-md-offset-2 main-content">
    <div class="post-metadata">
      <%= avatar_for(current_user, size: 40) %>
      <div class="post-info">
        <%= link_to current_user.username, current_user %><br/>
        <small>New Album</small>
      </div>
    </div>

    <%= form_for @photo_album, html: { multiple: true, class: 'editor-form' } do |f| %>

      <div class="form-group">
        <%= f.text_field :title, class: 'editor-title', placeholder: 'Title', autofocus: true %>
      </div>

      <div class="form-group">
        <%= f.text_area :description, class: 'medium-editable', placeholder: 'Description (optional)' %>
      </div>

      <label class="file-image-upload">
        <%= f.file_field :photos, multiple: true%>
        <div class="file-image-upload-button">
          <i class="fa fa-file-image-o"></i>
        </div>
      </label>

      <div class="form-group">
        <%= f.submit "Publish", class: 'button green-border-button' %>
      </div>
    <% end %>
  </div>
</div>
