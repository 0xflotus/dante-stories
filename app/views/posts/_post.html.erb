<div class="post">
  <div class="metadata">
    <%= avatar_for post.user, size: 35 %>
    <div>
      <%= link_to post.username, post.user %>
      <small><%= time_ago_in_words(post.created_at) %> ago</small>
    </div>
  </div>

  <div class="main-body">
    <h3 class="post-title"><%= link_to post.title, post %></h3>
    <div class="post-body"><%= post.body %></div>
  </div>
</div>
